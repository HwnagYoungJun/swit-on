<?xml version="1.0" encoding="UTF-8"?>
<!-- mappers/Board.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
<!-- 게시판의 type은 1: 공지, 2: QnA, 3: 자료실 -->

	<!-- 게시판 리스트 반환 -->
	<select id="selectBoards" resultType="Board">
		select id,
			study_id,
			type
		from board
	</select>
	
	<!-- 스터디 아이디의 게시판 리스트 반환 -->
	<select id="selectBoardsByStudyId" resultType="Board">
		select id,
			study_id,
			type
		from board
		where study_id = #{studyId}
	</select>
	
	
	<!-- 스터디 아이디 일치 && 타입이 공지인 게시판 id 반환 -->
	<select id="findNoticeBoardId" resultType="Integer">
		select id
		from board
		where study_id = #{studyId}
		and type = 1
	</select>
	
	<!-- 스터디 아이디 일치 && 타입이 QnA인 게시판 id 반환 -->
	<select id="findQnABoardId" resultType="Integer">
		select id
		from board
		where study_id = #{studyId}
		and type = 2
	</select>
	
	<!-- 스터디 아이디 일치 && 타입이 자료실인 게시판 id 반환 -->
	<select id="findRepoBoardId" resultType="Integer">
		select id
		from board
		where study_id = #{studyId}
		and type = 3
	</select>
	
	
	
	<!-- 게시판 상세 정보 반환 -->
	<select id="selectBoard" resultType="Board">
		select id,
			study_id,
			type
		from board
		where id = #{id}
	</select>
	
	<!-- 게시판 생성 -->
	<insert id="insertBoard">
		insert into board(
				study_id,
				type
			)
		values (
				#{study_id},
				#{type}
			)
	</insert>
	
	<!-- 게시판 수정은 안 쓸 듯-->
	
	<!-- 게시판 삭제 -->
	<delete id="deleteBoard">
		delete from board
		where id = #{id}
	</delete>

</mapper>